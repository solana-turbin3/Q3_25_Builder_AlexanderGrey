{
  "compilerOptions": {
    "target": "es2016",                                  
    "lib": ["es2019"],                                   
    "module": "commonjs",                                
    "rootDir": "./",                                     
    "resolveJsonModule": true,                           
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           

    "strict": true,                                      
    "noImplicitAny": true,                               
    "skipLibCheck": true                                 
  }
}
